<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_producers_layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.farmdrop.challenge.producers.ui.ProducersActivity">

    <fragment
        android:id="@+id/activity_producers_fragment_list"
        class="com.farmdrop.challenge.producers.ui.ProducersListFragment"
        android:layout_width="@dimen/producers_list_width"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/activity_producers_fragment_details"
        class="com.farmdrop.challenge.producers.ui.ProducerDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
